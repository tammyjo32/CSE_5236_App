<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tammy.test.displayMenu.SettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/contact_bubble"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account"
                android:padding="20dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>

            <View
                android:layout_width="550dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray"/>

            <Switch
                android:id="@+id/media_sites_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Switch"
                android:text="@string/social_media_sites_visibility"
                android:padding="20dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginBottom="20dp"
                android:checked="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notifications"
                android:padding="20dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>

            <View
                android:layout_width="550dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray"/>

            <Switch
                android:id="@+id/discussion_notification_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Switch"
                android:text="@string/discussion_board"
                android:padding="20dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:checked="true"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>


